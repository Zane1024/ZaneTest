<?xml version="1.0" encoding="utf-8"?>
<!--本期所有参与记录的 ListView Item-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="#000000"/>

            <com.example.em.mi.JL.com.CircleImageView
                android:id="@+id/all_participation_records_img_touxiang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/test" />

            <ImageView
                android:id="@+id/all_participation_records_img_vip"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="40dp"
                android:background="@null"
                android:src="@mipmap/vip5"
                />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/all_participation_records_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="019799秦晓健"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/all_participation_records_tv_ip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="湛江 218.108.128.199"/>

                <TextView
                    android:id="@+id/all_participation_records_tv_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:text="参与了30人次"/>

            </LinearLayout>

            <TextView
                android:id="@+id/all_participation_records_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="2017-06-26 09:06:23.366"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="20dp"
        android:background="#cccccc"/>


</LinearLayout>

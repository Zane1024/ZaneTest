<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/inventory_lv_item_iv"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="3"
        android:src="@mipmap/ic_launcher"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="5.0"
        android:layout_height="90dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/inventory_lv_item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:text="淘宝卡1000元"
            android:singleLine="true"
            android:textSize="16dp"
            />

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/homg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总需："/>

            <TextView
                android:id="@+id/inventory_lv_item_tv_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/homg_tv"
                android:text="6666"/>

            <TextView
                android:id="@+id/inventory_lv_item_tv_surplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/orange"
                android:text="655"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/inventory_lv_item_tv_surplus"
                android:text="剩余："/>
        </RelativeLayout>
        <com.example.em.mi.Fragment_4.amount.AmountView
            android:id="@+id/inventory_lv_item_amount_view"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="left"
            android:layout_marginRight="15dp">
        </com.example.em.mi.Fragment_4.amount.AmountView>



    </LinearLayout>

    <Button
        android:id="@+id/inventory_lv_item_btn_baowei"
        android:layout_marginTop="25dp"
        android:layout_width="0dp"
        android:layout_weight="2.0"
        android:layout_height="30dp"
        android:text="包尾"
        android:textSize="12dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:textColor="@color/darkorange"
        android:layout_gravity="center"
        android:background="@drawable/home_corner_button_selector"
        />

</LinearLayout>

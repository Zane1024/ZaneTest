<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/participation_open_item_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:src="@mipmap/img1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/participation_open_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14dp"
                android:text="吉列威锋双层旋转手动剃须刀"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NewsTitle"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dimgrey"
                    android:textSize="14dp"
                    android:text="期号"/>

                <TextView
                    android:id="@+id/participation_open_item_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/dimgrey"
                    android:textSize="14dp"
                    android:text="170771"/>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/NewsItemLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dimgrey"
                    android:textSize="14dp"
                    android:text="我已参与："/>

                <TextView
                    android:id="@+id/participation_open_item_frequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/orange"
                    android:textSize="14dp"
                    android:text="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/dimgrey"
                    android:textSize="14dp"
                    android:text="人次"/>

                <TextView
                    android:id="@+id/participation_open_item_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/dodgerblue"
                    android:textSize="14dp"
                    android:text="参与详情"/>


            </LinearLayout>






        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:background="#f3f2f2">

    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingLeft="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dimgrey"
                android:textSize="14dp"
                android:layout_gravity="center_vertical"
                android:text="获奖者："/>

            <TextView
                android:id="@+id/participation_open_item_winners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dimgrey"
                android:layout_gravity="center_vertical"
                android:textSize="14dp"
                android:singleLine="true"
                android:maxEms="4"
                android:ellipsize="end"
                android:text="面朝大海春暖花开"/>
        </LinearLayout>

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/participation_open_item_sumpeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textSize="14dp"
                android:layout_gravity="center_vertical"
                android:text="800"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dimgrey"
                android:textSize="14dp"
                android:layout_gravity="center_vertical"
                android:text="人次"/>

        </LinearLayout>

        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/participation_open_item_btn"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="继续买"
            android:textSize="12dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/darkorange"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/home_corner_button_selector"
            />

    </RelativeLayout>



</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp">


        <ImageView
            android:id="@+id/home_popularity_rv_item_img"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/home_popularity_rv_item_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:text="淘宝卡1000元"
            android:singleLine="true"
            android:textSize="12dp"
            />

        <ProgressBar
            android:id="@+id/my_progress"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="5dp"
            android:max="100"
            android:progress="40"
            android:secondaryProgress="90"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/progressbar_color"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/homg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总需："/>

            <TextView
                android:id="@+id/home_popularity_rv_item_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/homg_tv"
                android:text="6666"/>
            
            <TextView
                android:id="@+id/home_popularity_rv_item_surplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/orange"
                android:text="655"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/home_popularity_rv_item_surplus"
                android:text="剩余："/>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/home_popularity_rv_item_duobao"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="立即夺宝"
            android:textSize="12dp"
            android:textColor="@color/darkorange"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/home_corner_button_selector"
            />
            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bg_1"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>




</LinearLayout>
